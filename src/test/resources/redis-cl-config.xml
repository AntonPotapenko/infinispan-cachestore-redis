<?xml version="1.0" encoding="UTF-8"?>
<infinispan
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="urn:infinispan:config:8.0 http://www.infinispan.org/schemas/infinispan-config-8.0.xsd
                          urn:infinispan:config:store:redis:8.0 http://www.infinispan.org/schemas/infinispan-cachestore-redis-config-8.0.xsd"
    xmlns="urn:infinispan:config:8.0"
    xmlns:remote="urn:infinispan:config:store:redis:8.0" >

    <!-- Default cache named to preserve old default cache name -->
    <cache-container default-cache="___defaultcache">
        <local-cache name="___defaultcache">
            <persistence passivation="false">
                <redis-store
                    xmlns="urn:infinispan:config:store:redis:8.0"
                    cache="___defaultcache"
                    client-name=""
                    database=""
                    password=""
                    retry-attempts=""
                    retry-interval=""
                    execution-timeout="">

                    <load-balancer factory="foo.bar.baz.LoadBalancerFactory">
                        <property name="foo">bar</property>
                        <property name="foo">bar</property>
                    </load-balancer>

                    <redis-server type="master" host="127.0.0.1" port="6380" />
                    <redis-server type="sentinel" host="127.0.0.1" port="6380" />
                    <redis-server type="slave" host="127.0.0.1" port="6380" />
                    <redis-server host="127.0.0.1" port="6380" />

                    <connection-pool max-master-total="100" max-slave-total="100"/>

                    <!-- todo: async executor?? -->
                </redis-store>
            </persistence>
        </local-cache>
    </cache-container>

</infinispan>